    <div class="contact-form">
        <form id="contactForm" action="" method="POST">
            <div class="row">
                <div class="col-12 col-md-6">

                    <div>
                        <label for="firstName" class="form-label">First Name:</label>
                        <input id="firstName" type="text" name="firstName" class="form-control" required />
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div>
                        <label for="lastName" class="form-label">Last Name:</label>
                        <input class="form-control" id="lastName" type="text" name="lasttName" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6">

                    <div>
                        <label for="firstName" class="form-label">Email:</label>
                        <input class="form-control" id="email" type="email" name="email" required />
                    </div>
                </div>
                <div class="col-12 col-md-6">

                    <div>
                        <label for="phoneNumber" class="form-label">Phone Number:</label>
                        <input class="form-control" id="phoneNumber" type="tel" name="phoneNumber" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6">
                    <div>
                        <label for="address" class="form-label">Address:</label>
                        <input class="form-control" id="address" type="text" name="address" />
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div>
                        <label for="city" class="form-label">City:</label>
                        <input class="form-control" id="city" type="text" name="city" />
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div>
                        <label for="zipcode" class="form-label">Zipcode:</label>
                        <input class="form-control" id="zipcode" type="text" name="zipcode" />
                    </div>
                </div>
            </div>
            <div>
                <label class="form-label" for="formDropdown">How did you hear about us?</label>
                <select class="form-select" id="formDropdown" name="formDropdown" required>
                    <option value="blank"></option>
                    <option value="google">Google</option>
                    <option value="bing">Bing</option>
                    <option value="billboard">Billboard</option>
                    <option value="sign">Lawn sign</option>
                    <option value="friend">A friend</option>
                    <option value="newspaper">Newspaper</option>

                </select>
            </div>
            <div>
                <label for="formMessage" class="form-label">How can we help?</label>
                <textarea id="formMessage" class="form-control" rows="4" cols="30" name="formMessage" required></textarea>
            </div>

            <input class="btn mt-2" type="submit" value="submit" />
        </form>
    </div>

    <div class="row">

        <div class="col-12 col-md-6">

            <div class="wrap">
                <div class="contact-content">
                    <h3>Hours of Operation</h3>
                    <i class="bi bi-clock-fill"></i>
                    <p class="text-center">
                        Monday-Friday: 8:30am-4:00pm
                    </p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">

            <div class="wrap">
                <div class="contact-content">
                    <h3>Email Us</h3>
                    <i class="bi bi-envelope-fill"></i>
                    <p class="text-center">
                        sunscapes@email.com
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-12 col-md-6">

            <div class="wrap">
                <div class="contact-content">
                    <h3>Give us a call</h3>
                    <i class="bi bi-telephone-fill"></i>
                    <p class="text-center">
                        (000) 000-0000
                    </p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="wrap">
                <div class="contact-content">
                    <h3 class="pb-5">Get a Quote</h3>
                    <a class="btn">Today</a>
                </div>
            </div>
        </div>
    </div>
</section>
